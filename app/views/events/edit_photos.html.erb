<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Add Photos to '<%= @event.theme %>'</h1>

 <%= form_with(model: @event, class: "contents") do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% @event.photos.each do |photo| %>
    <%= form.hidden_field :photos, multiple: true, value: photo.signed_id %>
  <% end %>

  <div class="my-5">
    <%= form.label 'Add Photos' %>
    <%= form.file_field :photos, multiple: true,  class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>


  <%= link_to "Back to events", organization_events_path(@event.organization), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
