<%= link_to gallery_path(gallery) do%>
  <div 
  id="<%= dom_id gallery %>"
 class="card p-4 rounded-lg shadow-lg hover:bg-gray-200 bg-gray-100 my-4 w-1/3 relative cursor-pointer">
  <p class="my-5 font-bold text-3-xl ">
    <%= gallery.title %>
    
  </p>

  <p class="my-5 font-medium text-3-xl">
        <%= gallery.description[0..130] %>...
  </p>

  <p class="my-5 flex">
    <strong class="block font-medium mb-1">Event date: &nbsp;</strong>
    <%= gallery.event_date %>
  </p>

  <div class="my-5 flex w-full bg-red-100 rounded">
    <% gallery.photos.first(5).each do |photo| %>
      <div >
        <%= image_tag photo.image.representation(resize_to_fill: [100, 100]) %>
      </div>
    <% end %>
  </div>

</div>

<% end %>